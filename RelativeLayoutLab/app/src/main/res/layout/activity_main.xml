<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relative_visit_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_orange_light"
        android:layout_margin="8dp"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/image_visit_card"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:src="@drawable/william_wallace"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/linear_text_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/image_visit_card"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Visit Card Name"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="email@email.com"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Job Position"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/text_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Bio"
                android:layout_weight="3"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>